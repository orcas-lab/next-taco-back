{
  "name": "next-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=DEV nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/next-server/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --clearCache && cross-env NODE_ENV=DEV jest --force-exit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --clearCache && cross-env NODE_ENV=DEV jest --coverage --force-exit --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/next-server/test/jest-e2e.json"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs/common": "^10.1.3",
    "@nestjs/core": "^10.1.3",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/microservices": "^10.1.3",
    "@nestjs/platform-express": "^10.1.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jose": "^4.14.4",
    "jsonwebtoken": "^9.0.1",
    "ms": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.8",
    "@nestjs/cli": "^10.1.12",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.1.3",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/ms": "^0.7.31",
    "@types/node": "20.5.1",
    "@types/ramda": "^0.29.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fs-extra": "^11.1.1",
    "ioredis": "^5.3.2",
    "jest": "29.6.2",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^7.4.3",
    "openpgp": "^5.9.0",
    "prettier": "^3.0.2",
    "ramda": "^0.29.0",
    "redis-memory-server": "^0.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/proto(|/.*)$": "<rootDir>/libs/proto/src/$1",
      "^@app/db(|/.*)$": "<rootDir>/libs/db/src/$1",
      "^@app/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@app/interface(|/.*)$": "<rootDir>/libs/interface/src/$1",
      "^@app/utils(|/.*)$": "<rootDir>/libs/utils/$1",
      "^@app/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@app/schema(|/.*)$": "<rootDir>/libs/schema/src/$1",
      "^@app/dto(|/.*)$": "<rootDir>/libs/dto/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/errors(|/.*)$": "<rootDir>/libs/errors/src/$1",
      "^@app/keypair(|/.*)$": "<rootDir>/libs/keypair/src/$1",
      "^@app/jwt(|/.*)$": "<rootDir>/libs/jwt/src/$1"
    }
  }
}