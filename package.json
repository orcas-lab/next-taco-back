{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/platform-socket.io": "^10.2.7",
    "@nestjs/swagger": "^7.1.14",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.2.7",
    "avatars": "^0.9.7",
    "ioredis": "^5.3.2",
    "ms": "^2.1.3",
    "mysql2": "^3.6.2",
    "ramda": "^0.29.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "toml": "^3.0.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.20",
    "@types/jest": "29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mockjs": "^1.0.9",
    "@types/ms": "^0.7.33",
    "@types/node": "20.8.10",
    "@types/ramda": "^0.29.7",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mockjs": "^1.1.0",
    "prettier": "^3.0.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/configure(|/.*)$": "<rootDir>/libs/configure/src/$1",
      "^@app/interface(|/.*)$": "<rootDir>/libs/interface/src/$1",
      "^@app/entity(|/.*)$": "<rootDir>/libs/entity/src/$1",
      "^@app/bcrypto(|/.*)$": "<rootDir>/libs/bcrypto/src/$1",
      "^@app/error(|/.*)$": "<rootDir>/libs/error/src/$1",
      "^@app/mock(|/.*)$": "<rootDir>/libs/mock/src/$1",
      "^@app/jwt(|/.*)$": "<rootDir>/libs/jwt/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@app/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@app/rabbitmq(|/.*)$": "<rootDir>/libs/rabbitmq/src/$1",
      "^@app/boring-avatar(|/.*)$": "<rootDir>/libs/boring-avatar/src/$1"
    }
  }
}